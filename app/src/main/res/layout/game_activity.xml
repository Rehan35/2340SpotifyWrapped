<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/game_activity_gradient"
    android:id="@+id/game_activity"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Artist"
        android:backgroundTint="@color/game_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/new_artist_image"
        app:cornerRadius="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Album"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/game_button"
        android:id="@+id/new_album_image"
        app:cornerRadius="10dp"
        />

    <ImageView
        android:id="@+id/game_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tracks_placeholder_card_image"
        android:contentDescription="Album Cover/Artist Cover"
        android:background="@drawable/rounded_corner_background"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_guess_id"
        android:text="Enter your Guess"
        android:fontFamily="@font/akaya_telivigala"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/game_image"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/guess_text_field"
        android:layout_below="@+id/enter_guess_id"
        android:layout_centerHorizontal="true"
        android:background="@drawable/game_activity_text_bkg"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:text="Guess Cover"
        android:inputType="text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guess_button"
        android:text="Guess"
        android:layout_below="@id/guess_text_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/game_button"
        app:cornerRadius="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:backgroundTint="@color/clear_opacity"
        android:fontFamily="@font/akaya_telivigala"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/guess_button"/>






</RelativeLayout>