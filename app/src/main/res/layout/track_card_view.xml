<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/artist_card"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp">


    <TextView
        android:id="@+id/number_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/track_image2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toEndOf="@id/number_text2"
        android:src="@drawable/tracks_placeholder_card_image"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/rounded_corner_background"
        android:layout_marginStart="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/track_image2"
        android:layout_marginStart="30dp">
        <TextView
            android:id="@+id/track_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homecoming"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="-5dp"
            android:fontFamily="@font/akaya_telivigala"/>
        <TextView
            android:id="@+id/album_name2"
            android:layout_below="@+id/track_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="Album: Graduation"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/akaya_telivigala"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/track_artist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_name2"
            android:text="Artist: Kanye West"
            android:layout_marginTop="-15dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/akaya_telivigala" />
    </RelativeLayout>

</RelativeLayout>